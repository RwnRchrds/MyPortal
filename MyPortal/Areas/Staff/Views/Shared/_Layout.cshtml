<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyPortal - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        var version = ViewContext.Controller.GetType().Assembly.GetName().Version;
    }
    
    @Scripts.Render("~/bundles/syncfusion")
</head>
<body class="portal-body">
<div id="wrapper">
        @Html.Partial("_SideBar")
        
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                @Html.Partial("_NavBar")
                
                <div class="container-fluid">
                    @RenderBody()
                </div>
                
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Version @version.Major.ToString().@version.Minor.ToString().@version.Build.ToString()</span>
                            <span>&copy; MyPortal Ltd 2019</span>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>

@Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/navbar")
    @RenderSection("scripts", false)

    <!-- Syncfusion Essential JS 2 ScriptManager -->
    @Html.EJS().ScriptManager()
</body>
</html>