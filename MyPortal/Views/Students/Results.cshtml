@model MyPortal.ViewModels.StudentResultsViewModel
@{
    ViewBag.Title = "MyResults";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container float-left">
    <h2 class="mp-page-title">MyResults - @Model.Student.LastName, @Model.Student.FirstName</h2>
    <hr/>
</div>

<div class="container float-left">
    <div class="container">
        <div>
            @Html.Label("Result Set")
            @Html.DropDownList("SelectedResultSet", new SelectList(Model.ResultSets, "Id", "Name", Model.CurrentResultSetId), new { @class = "form-control", Name = "ResultSet", id = "selectedResultSet" })
            <table class="table table-bordered mp-table" id="results" data-student-id="@Model.Student.Id">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Result</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {

            var student = $("#results").attr("data-student-id");

            var resultset = $("#selectedResultSet").val();

            $("#results").DataTable({
                ajax: {
                    url: "/api/results/fetch",
                    data: {
                        'student': student,
                        'resultset': resultset
                    },
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "subject1.name"
                    },
                    {
                        data: "value"
                    }
                ],
                paging: false,
                ordering: false,
                searching: false,
                info: false
            });

            $("#selectedResultSet").on("change",
                function() {
                    $("#results").DataTable().destroy();
                    var resultset = $("#selectedResultSet").val();
                    $("#results").DataTable({
                        ajax: {
                            url: "/api/results/fetch",
                            data: {
                                'student': student,
                                'resultset': resultset
                            },
                            dataSrc: "",
                            method: "GET"
                        },
                        columns: [
                            {
                                data: "subject1.name"
                            },
                            {
                                data: "value"
                            }
                        ],
                        paging: false,
                        ordering: false,
                        searching: false,
                        info: false,
                        "language": {
                            "emptyTable": "No results to display"
                        }
                    });
                });


            //New Result Submit
            $("#NewResultForm").on("submit",
                function(e) {
                    var form = $("#NewResultForm");

                    e.preventDefault();

                    $.ajax({
                        url: "/api/results/new",
                        data: form.serialize(),
                        method: "POST",
                        success: function() {
                            toastr.success("Result added");
                            $("#NewResultModal").modal('toggle');
                        },
                        error: function() {
                            toastr.error("Result could not be added");
                        }
                    });
                });
        });
    </script>

    @Scripts.Render("~/bundles/staff")
    @Scripts.Render("~/bundles/jqueryval")
}