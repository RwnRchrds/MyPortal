@{
    ViewBag.Title = "Sales";
    Layout = "~/Views/Shared/_LayoutFinance.cshtml";
}

<h2>Sales</h2>
<hr/>

<table class="table table-bordered table-hover" id="sales">
    <thead>
    <tr>
        <th>Date</th>
        <th>Student</th>
        <th>Product</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {

            $("#sales").DataTable({
                ajax: {
                    url: "/api/sales",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "date",
                        render: function(data) {
                            var date = new Date(data);
                            return date.toLocaleDateString();
                        }
                    },
                    {
                        data: "student1.firstName",
                        render: function(data, type, sale) {
                            return sale.student1.lastName + ", " + sale.student1.firstName;
                        }
                    },
                    {
                        data: "product1.description"
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button type='button' class='btn btn-xs btn-warning js-refund' data-sale-id=" +
                                data +
                                "><span class='glyphicon glyphicon-credit-card' aria-hidden='true'></span></button> " +
                                "<button type='button' class='btn btn-xs btn-danger js-delete' data-sale-id=" +
                                data +
                                "><span class='glyphicon glyphicon-ban-circle' aria-hidden='true'></span></button>";
                        }
                    }
                ],
                "language": {
                    "emptyTable": "No sales to display"
                }

            });

            //Delete Sale When Button Clicked
            $("#sales").on("click",
                ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you wish to delete this sale?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/sales/delete/" + button.attr("data-sale-id"),
                                    method: "DELETE",
                                    success: function() {
                                        $("#sales").DataTable().ajax.reload();
                                        toastr.success("Sale deleted");
                                    },
                                    error: function() {
                                        toastr.error("Could not delete sale");
                                    }
                                });
                            }
                        });
                });

            //Refund Sale When Button Clicked
            $("#sales").on("click",
                ".js-refund",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you wish to refund this sale?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/sales/refund/" + button.attr("data-sale-id"),
                                    method: "DELETE",
                                    success: function() {
                                        $("#sales").DataTable().ajax.reload();
                                        toastr.success("Sale refunded");
                                    },
                                    error: function() {
                                        toastr.error("Could not refund sale");
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}