<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyPortal - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        var version = ViewContext.Controller.GetType().Assembly.GetName().Version;
    }
    
    @Scripts.Render("~/bundles/syncfusion")
</head>
<body>
    @Html.Partial("_NavBarStaffNew")
    <div class="container body-content">
        @RenderBody()
        <div class="container float-left">
            <hr />
            <footer>
                <p>
                    <b>Version:</b> @version.Major.ToString().@version.Minor.ToString().@version.Build.ToString()
                </p>
                <p>&copy; @DateTime.Now.Year - Rowan Richards</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/navbar")
    @RenderSection("scripts", false)

    <!-- Syncfusion Essential JS 2 ScriptManager -->
    @Html.EJS().ScriptManager()
</body>
</html>