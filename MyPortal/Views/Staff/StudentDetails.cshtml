@model MyPortal.Models.Student
@{
    ViewBag.Title = "StudentDetails";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<h2>@Model.LastName, @Model.FirstName</h2>

<hr />

<body>
    <div class="container" id="Details">
        <div style="float: left;">
            <button type="button" class="btn btn-warning">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Results
            </button>
            <div class="panel panel-primary" style="width: 300px; margin-top: 8px;">
                <div class="panel-heading">MyDetails</div>
                <div class="panel-body">
                    No details to display.
                </div>
            </div>
        </div>

        <div style="float: left; margin-left: 20px;" id="Results">
            <div class="panel panel-primary" style="width: 300px; margin-top: 44px;">
                <div class="panel-heading">MyResults</div>
                <div class="panel-body">
                    No results to display.
                </div>
            </div>
        </div>

        <div style="float: left; margin-left: 20px;" id="Chart">
            <div class="panel panel-primary" style="width: 300px; margin-top: 44px;">
                <div class="panel-heading">MyResults - Chart</div>
                <div class="panel-body">
                    No data to display.
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div>
            <button type="button" class="btn btn-success">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> New Log
            </button>
            <div class="panel panel-primary" style="width: 940px; margin-top: 8px;" id="Logs">
                <div class="panel-heading">MyLogs</div>
                <div class="panel-body">
                    No logs to display.
                </div>
            </div>
        </div>
    </div>

</body>

