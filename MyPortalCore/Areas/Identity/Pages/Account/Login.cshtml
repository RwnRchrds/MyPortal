@page "/Login"
@model LoginModel

@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}


<div class="kt-grid__item">

    
    <div class="kt-login-v1__head">
        <div class="kt-login-v1__logo">
            <h1 style="color: white;">
                MyPortal
            </h1>
        </div>
        <div class="kt-login-v1__signup">
            <h4 class="kt-login-v1__heading">Have an access code?</h4>
            <a href="#">Create Account</a>
        </div>
    </div>

    
</div>



<div class="kt-grid__item  kt-grid kt-grid--ver  kt-grid__item--fluid">

    
    <div class="kt-login-v1__body">

        
        <div class="kt-login-v1__section">
            <div class="kt-login-v1__info">
                <h3 class="kt-login-v1__intro">@Model.SchoolName</h3>
                <p>Freedom to Focus</p>
            </div>
        </div>

        
        
        <div class="kt-login-v1__seaprator"></div>

        
        
        <div class="kt-login-v1__wrapper">
            <div class="kt-login-v1__container">
                <h3 class="kt-login-v1__title">
                    Login
                </h3>
                
                <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>
                
                <form class="kt-login-v1__form kt-form" autocomplete="off" id="account" method="post">
                    <div class="form-group">
                        <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" autocomplete="off">
                    </div>
                    <div class="kt-login-v1__actions">
                        <button type="submit" class="btn btn-pill btn-elevate">Log In</button>
                    </div>
                </form>

            </div>
        </div>

        
    </div>

    
</div>



<div class="kt-grid__item">
    <div class="kt-login-v1__footer">
        <div class="kt-login-v1__copyright">
            <a>&copy; @DateTime.Today.Year MyPortal Ltd</a>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/lib/assets/js/pages/custom/user/login.js" type="text/javascript"></script>
    <partial name="_ValidationScriptsPartial"/>
}