@page "/Login"
@model LoginModel

@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Log in";
}


<!--begin::Aside-->
<div class="kt-grid__item kt-grid__item--order-tablet-and-mobile-2 kt-grid kt-grid--hor kt-login__aside" style="background-image: url(/lib/metronic/media/bg/bg-5.jpg);">
    <div class="kt-grid__item">
        <a href="#" class="kt-login__logo">
            <img src="~/lib/metronic/media/logos/trans_logo.png" style="height: 60px;">
        </a>
    </div>
    <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--ver">
        <div class="kt-grid__item kt-grid__item--middle">
            <h3 class="kt-login__title">Welcome to MyPortal!</h3>
            <h4 class="kt-login__subtitle">The ultimate MIS for next generation schools.</h4>
        </div>
    </div>
    <div class="kt-grid__item">
        <div class="kt-login__info">
            <div class="kt-login__copyright">
                &copy @DateTime.Today.Year MyPortal Ltd
            </div>
            <div class="kt-login__menu">
                <a href="#" class="kt-link">Privacy</a>
                <a href="#" class="kt-link">Legal</a>
                <a href="#" class="kt-link">Contact</a>
            </div>
        </div>
    </div>
</div>

<!--begin::Aside-->
<!--begin::Content-->
<div class="kt-grid__item kt-grid__item--fluid  kt-grid__item--order-tablet-and-mobile-1  kt-login__wrapper">

    <!--begin::Head-->
    <div class="kt-login__head">
        <span class="kt-login__signup-label">Have an access code?</span>&nbsp;&nbsp;
        <a href="#" class="kt-link kt-login__signup-link">Create Account</a>
    </div>

    <!--end::Head-->
    <!--begin::Body-->
    <div class="kt-login__body">

        <!--begin::Signin-->
        <div class="kt-login__form">
            <div class="kt-login__title">
                <h3>@Model.SchoolName</h3>
            </div>

            <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>

            <!--begin::Form-->
            <form class="kt-form" autocomplete="off" id="account" method="post">
                <div class="form-group">
                    <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username" autocomplete="off" />
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" autocomplete="off">
                </div>

                <!--begin::Action-->
                <div class="kt-login__actions">
                    <a href="#" class="kt-link kt-login__link-forgot">
                        Forgot Password ?
                    </a>
                    <button type="submit" id="kt_login_signin_submit" class="btn btn-primary btn-elevate kt-login__btn-primary">Login</button>
                </div>

                <!--end::Action-->
            </form>
        </div>

        <!--end::Signin-->
    </div>

    <!--end::Body-->
</div>

<!--end::Content-->



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}