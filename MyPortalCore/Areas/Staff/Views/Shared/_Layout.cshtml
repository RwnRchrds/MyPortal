<!--end::Global Config-->
<!--begin::Global Theme Bundle(used by all pages)-->
<script src="~/lib/metronic/plugins/global/plugins.bundle.js?v=7.0.5"></script>
<script src="~/lib/metronic/plugins/custom/prismjs/prismjs.bundle.js?v=7.0.5"></script>
<script src="~/lib/metronic/js/scripts.bundle.js?v=7.0.5"></script>
<script src="~/lib/metronic/plugins/custom/datatables/datatables.bundle.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<!--end::Global Theme Bundle-->
<!--begin::Page Vendors(used by this page)-->
<script src="~/lib/metronic/plugins/custom/fullcalendar/fullcalendar.bundle.js?v=7.0.5"></script>
<!--end::Page Vendors-->
<!--begin::Page Scripts(used by this page)-->
<!--end::Page Scripts-->

@RenderSection("Scripts", false)

</body>

</html>