<div class="modal fade" id="lognote_modal" tabindex="-1" role="dialog" aria-labelledby="lognote_modal_title" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lognote_modal_title">Log Note</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="lognote_type">Log Note Type</label>
                        @Html.DropDownList("LogNoteType", new SelectList(Model.LogNoteTypes.OrderBy(x => x.Key), "Value", "Key"), "Select Type", new { @class = "form-control", id = "lognote_type" })
                    </div>
                    <div class="form-group">
                        <label for="lognote_message">Message</label>
                        <textarea class="form-control" id="lognote_message" name="message" rows="10"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
